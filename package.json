{
    "private": true,
    "packageManager": "pnpm@9.9.0",
    "type": "module",
    "scripts": {
        "clear": "pnpm -C packages/scripts clear",
        "build": "pnpm -C packages/scripts build",
        "build:style": "pnpm -C packages/scripts build:style",
        "publish": "pnpm -C packages/scripts publish",
        "test": "pnpm -C packages/components test",
        "test:ui": "pnpm -C packages/components test:ui",
        "coverage": "pnpm -C packages/components coverage",
        "docs:dev": "pnpm -C docs dev",
        "docs:build": "pnpm -C docs build",
        "docs:preview": "pnpm -C docs preview",
        "format": "prettier --write \"**/*.{js,cjs,mjs,ts,tsx,json,css,scss,vue,html,md}\"",
        "lint": "eslint --cache \"**/*.{js,cjs,mjs,ts,tsx,vue,json,md}\"",
        "lint:fix": "pnpm run lint --fix",
        "prepare": "husky"
    },
    "dependencies": {
        "vue": "^3.4.30",
        "element-plus": "^2.7.6",
        "@element-plus/icons-vue": "^2.3.1",
        "@yujinjin/cms-components-modules": "workspace:*",
        "@yujinjin/cms-components": "workspace:*"
    },
    "devDependencies": {
        "chalk": "^5.3.0",
        "typescript": "^5.5.4",
        "vite": "^5.3.1",
        "@vitejs/plugin-vue": "^5.1.3",
        "@vitejs/plugin-vue-jsx": "^4.0.1",
        "vue-tsc": "^2.1.6",
        "less": "^4.2.0",
        "sass": "^1.77.6",
        "postcss": "8.4.38",
        "@commitlint/cli": "^19.3.0",
        "@commitlint/config-conventional": "^19.2.2",
        "husky": "^9.0.11",
        "lint-staged": "^15.2.7",
        "prettier": "^3.3.3",
        "eslint": "^9.10.0",
        "typescript-eslint": "^8.5.0",
        "@typescript-eslint/parser": "^8.5.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import-x": "^4.2.1",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-vue": "^9.28.0",
        "eslint-plugin-jsonc": "^2.16.0",
        "eslint-plugin-markdown": "^5.1.0",
        "eslint-plugin-vitest": "^0.5.4",
        "eslint-import-resolver-typescript": "3.6.3",
        "@eslint/js": "^9.10.0",
        "@vue/eslint-config-prettier": "^9.0.0",
        "@vue/eslint-config-typescript": "^13.0.0",
        "@vue/tsconfig": "^0.5.1",
        "@types/node": "^22.5.4",
        "tsx": "^4.19.1",
        "cross-env": "^7.0.3",
        "ts-node": "^10.9.2"
    },
    "prettier": {
        "tabWidth": 4,
        "useTabs": false,
        "jsxBracketSameLine": false,
        "printWidth": 200,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "semi": true,
        "endOfLine": "auto",
        "singleQuote": false,
        "quoteProps": "consistent",
        "htmlWhitespaceSensitivity": "ignore"
    },
    "engines": {
        "node": ">=18"
    },
    "pnpm": {
        "peerDependencyRules": {
            "ignoreMissing": [
                "vite",
                "react",
                "react-dom"
            ]
        }
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not dead"
    ],
    "lint-staged": {
        "*.{jsx,txs,ts,js,tsx,json,vue}": "eslint --fix"
    }
}
